{
  "name": "@edgeflags/react",
  "version": "0.1.0",
  "description": "React hooks and provider for EdgeFlags feature flag service",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@edgeflags/sdk": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.0.0",
    "jsdom": "^25.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": ["feature-flags", "edgeflags", "react", "hooks"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edgeflags/sdks.git",
    "directory": "packages/react"
  },
  "homepage": "https://docs.edgeflags.net/guides/client-sdks/",
  "bugs": {
    "url": "https://github.com/edgeflags/sdks/issues"
  }
}
